/*
 * For GrouperShell testing.
 * $Id: assert.bsh,v 1.2 2006-06-21 22:33:54 blair Exp $
 */
assert(String msg, boolean condition) {
  if (condition) {
    print("OK (" + msg + ")");  
  }
  else {
    print(
        "FAIL (" + msg + ") " 
      + "Line: "  + this.namespace.getInvocationLine()
      + " : "     + this.namespace.getInvocationText()
      + " : while evaluating file: "+getSourceFileInfo()
    );
    super.test_failed = true;
  }
}
