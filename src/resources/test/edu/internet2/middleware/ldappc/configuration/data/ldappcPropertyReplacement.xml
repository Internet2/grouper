<?xml version="1.0" encoding="utf-8"?>

<ldappc>

	<grouper>

		<group-queries>

			<attribute-matching-queries>

				<attribute-list>

					<attribute name="attribute1" value="attributeValue1" />

					<attribute name="attribute2" value="attributeValue2" />

				</attribute-list>

			</attribute-matching-queries>

		</group-queries>


		<groups structure="flat" root-dn="${groupDnRoot}" ldap-object-class="gLdapObjectClass"
			ldap-rdn-attribute="gLdapRdnAttribute" grouper-attribute="id">

			<group-members-dn-list list-attribute="gmdlAttribute" />

		</groups>

	</grouper>


	<source-subject-identifiers>
		<source-subject-identifier source="source1"
			subject-attribute="subjectAttr1">

			<ldap-search base="ldapSearchBase1" scope="object_scope"
				filter="ldapSearchFilter1" />

		</source-subject-identifier>		

	</source-subject-identifiers>


	<ldap>
		<context>

			<parameter-list>

				<parameter name="initial_context_factory" value="${initial_context_factory}" />

				<parameter name="provider_url" value="${provider_url}" />

				<parameter name="security_authentication" value="${security_authentication}" />

				<parameter name="security_principal" value="${security_principal}" />

				<parameter name="security_credentials" value="${security_credentials}" />

			</parameter-list>

		</context>

	</ldap>

</ldappc>
