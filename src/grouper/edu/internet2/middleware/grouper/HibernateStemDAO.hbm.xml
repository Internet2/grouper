<!-- $Id: HibernateStemDAO.hbm.xml,v 1.1 2007-02-08 16:25:25 blair Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper">
  <class name="HibernateStemDAO" table="grouper_stems">

    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">HibernateDAO.getSession();</meta>

    <cache usage="read-write"/>

    <!-- id -->
    <id name="id" 
        type="string" 
        unsaved-value="null"
        length="128"
    >
      <generator class="uuid.hex"/>
    </id>
    <!-- id -->

    <!-- uuid -->
    <property name="uuid"
              type="string"
              unique="true"
    >
      <column name="uuid"
              length="128"
              index="stem_uuid_idx"
              not-null="true"
      />
    </property>
    <!-- uuid -->

    <!-- TODO 20070130 shouldn't this be indexed? -->
    <!-- parentUuid -->
    <!-- [@since 1.2.0] Refers to parent stem's UUID, not ID -->
    <property name="parentUuid"
              type="string"
              not-null="false"
              unique="false"
              update="false"
    >
      <column name="parent_stem"
              not-null="false"
              length="128"
      />
    </property>
    <!-- parentUuid -->

    <!-- name -->
    <property
      name="name"
      type="string"
    >
      <column name="name"
              not-null="true"
              index="stem_name_idx"
      />
    </property>
    <!-- name -->

    <!-- displayName -->
    <property name="displayName"
              type="string"
    >
      <column name="display_name"
              index="stem_displayname_idx"
              not-null="true"
      />
    </property>
    <!-- displayName -->

    <!-- creatorUuid -->
    <!-- [@since 1.2.0] Refers to creator's UUID, not ID -->
    <property name="creatorUuid"
              type="string"
              not-null="true"
              unique="false"
              update="false"
    >
      <column name="creator_id"
              not-null="true"
              length="128"
              index="stem_creator_idx"
      />
    </property>
    <!-- creatorUuid -->

    <!-- createTime -->
    <property name="createTime"
              type="long"
              update="true" 
    >
      <column name="create_time"
              not-null="true"
              index="stem_createtime_idx" 
      />
    </property>
    <!-- createTime -->

    <!-- modifierUuid -->
    <!-- [@since 1.2.0] Refers to creator's UUID, not ID -->
    <property name="modifierUuid"
              type="string"
              unique="false"
    >
      <column name="modifier_id"
              length="128"
              index="stem_modifier_idx"
      />
    </property>
    <!-- modifierUuid -->

    <!-- modifyTime -->
    <property name="modifyTime"
              type="long"
    >
      <column name="modify_time"
              index="stem_modifytime_idx" 
      />
    </property>
    <!-- modifyTime -->

    <!-- displayExtension -->
    <property name="displayExtension"
              type="string"
    >
      <column name="display_extension"
              index="stem_displayextn_idx"
              not-null="true"
      />
    </property>
    <!-- displayExtension -->

    <!-- extension -->
    <property name="extension"
              type="string"
    >
      <column name="extension"
              not-null="true"
              index="stem_extn_idx"
      />
    </property>
    <!-- extension -->

    <!-- description -->
    <property name="description"
              type="string"
              length="1024"
    />
    <!-- description -->

    <!-- createSource -->
    <property name="createSource"
              type="string"
    >
      <column name="create_source"/>
    </property>
    <!-- createSource -->

    <!-- modifySource -->
    <property name="modifySource"
              type="string"
    >
      <column name="modify_source"/>
    </property>
    <!-- modifySource -->

  </class>
</hibernate-mapping>

