<!-- $Id: Group.hbm.xml,v 1.9 2005-12-11 21:41:53 blair Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper">
  <class name="Group" table="grouper_groups">

    <meta attribute="class-description">
A group within the Groups Registry.
@author blair christensen.
    </meta>
    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">HibernateHelper.getSession();</meta>

    <!-- id -->
    <id name="id" 
        type="string"
        unsaved-value="null"
    >
      <generator class="uuid.hex"/>
    </id>
    <!-- id -->
    <version name="version" column="version"/>


    <!-- attributes -->
    <!-- TODO Would switching to _all-delete-orphan_ work -->
    <set  name="group_attributes"
          cascade="all"
    >
      <key column="group_id"/>
      <one-to-many class="edu.internet2.middleware.grouper.Attribute" />
    </set>
    <!-- attributes -->

    <!-- creator_id -->
    <many-to-one  name="creator_id"
                  class="edu.internet2.middleware.grouper.Member" 
                  index="group_creator_idx"
    />
    <!-- creator_id -->

    <!-- create_source -->
    <property name="create_source"
              type="string"
    />
    <!-- create_source -->

    <!-- create_time -->
    <property name="create_time"
              type="long"
              not-null="true"
              update="false"
              index="group_createtime_idx"
    />
    <!-- create_time -->

    <!-- modifier_id -->
    <many-to-one  name="modifier_id"
                  class="edu.internet2.middleware.grouper.Member" 
                  index="group_modifier_idx"
    />
    <!-- modifier_id -->

    <!-- modify_source -->
    <property name="modify_source"
              type="string"
    />
    <!-- modify_source -->

    <!-- modify_time -->
    <property name="modify_time"
              type="long"
              index="group_modifytime_idx"
    />
    <!-- modify_time -->

    <!-- parent_stem -->
    <many-to-one
      name="parent_stem"
      class="edu.internet2.middleware.grouper.Stem"
      cascade="none"
    />
    <!-- parent_stem -->

    <!-- group_id -->
    <property 
      name="group_id"
      type="string"
      not-null="true"
      unique="true"
      index="group_uuid_idx"
    >
      <column name="group_uuid"/>
    </property>
    <!-- group_id -->

    <!-- group_types -->
    <set  name="group_types"
          table="grouper_groups_types"
          cascade="save-update"
    >
      <key column="group_id"/>
      <many-to-many class="edu.internet2.middleware.grouper.GroupType"
                    column="type_id"
      />
    </set>
    <!-- group_types -->

    <!-- status -->
    <property name="status"
              type="edu.internet2.middleware.grouper.StatusUserType"
              update="false"
              index="group_status_idx"
    >
      <column name="status_name"/>
      <column name="status_ttl"
              sql-type="bigint"
      />
    </property>
    <!-- status -->

  </class>
</hibernate-mapping>

