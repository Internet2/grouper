<!-- $Id: HibernateSubject.hbm.xml,v 1.4 2006-07-11 15:21:33 blair Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper">
  <class name="HibernateSubject" table="Subject">

    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">HibernateHelper.getSession();</meta>

    <cache usage="read-write"/>

    <!-- id -->
    <id name="subjectId" 
        type="string"
        unsaved-value="null"
        length="64"
    >
      <column name="subjectId"
              index="subject_idx"
      />
      <generator class="assigned"/>
    </id>
    <!-- id -->

    <!-- subjectTypeId -->
    <property name="subjectTypeId"
              type="string"
    >
      <column name="subjectTypeId"
              not-null="true"
              length="32"
              index="subject_idx"
      />
    </property>
    <!-- subjectTypeId -->
         
    <!-- name -->
    <property name="name"
              type="string"
              not-null="true"
    >
      <column name="name"
              length="255"
      />
    </property>
    <!-- name -->

    <!-- attributes -->
<!-- TODO
    <set  name="attributes"
          cascade="none"
    >
      <key column="subjectId"/>
      <one-to-many class="edu.internet2.middleware.grouper.HibernateSubjectAttribute" />
    </set>
-->
    <!-- attributes -->

  </class>
</hibernate-mapping>

