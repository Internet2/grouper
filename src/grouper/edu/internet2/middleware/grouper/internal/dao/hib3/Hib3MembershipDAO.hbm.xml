<!-- $Id: Hib3MembershipDAO.hbm.xml,v 1.13 2009-03-24 17:12:08 mchyzer Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper" default-lazy="false">

  <!-- note: optimistic-lock defaults to version, but will be dynamically replaced
    based on the grouper.properties, so dont remove that attribute  -->
  <!-- TODO 20070124 revisit the batch-size setting now that i've completely altered this mapping -->
  <class name="Membership" table="grouper_memberships" batch-size="5" optimistic-lock="version">

    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">Hib3DAO.getSession();</meta>

    <cache usage="read-write"/>

    <!-- id -->
    <id name="uuid" 
        column="id"
        type="string"
        unsaved-value="none"
        length="128"
    >
      <generator class="assigned" />
    </id>
    <!-- id -->

    <!-- version helps hibernate know when insert/update, and makes sure optimistic locking -->
    <version name="hibernateVersionNumber" column="hibernate_version_number" type="long"/>

    <property name="ownerGroupId" type="string" column="owner_group_id" />

    <property name="ownerStemId" type="string" column="owner_stem_id" />

    <!-- memberUuid -->
    <!-- [@since 1.2.0] Refers to member's UUID, not ID -->
    <property name="memberUuid"
              type="string"
              update="true"
    >
      <column name="member_id"
              not-null="true"
              length="128"
              unique-key="members_idx"
              index="membership_member_idx, membership_member_list_idx, membership_member_via_idx"
      />
    </property>
    <!-- memberUuid -->

    <!-- fieldId -->
    <property name="fieldId" length="128"
          column="field_id" type="string" />
    <!-- fieldId -->

    <!-- type -->
    <property name="type"
              type="string"
              update="false"
    >
      <column name="mship_type"
              not-null="true"
              length="32"
              index="membership_owner_list_type_idx"
      />
    </property>
    <!-- type -->

    <property name="viaGroupId"
              type="string" column="via_group_id"    />

    <property name="viaCompositeId"
              type="string" column="via_composite_id"    />

    <!-- depth -->
    <property name="depth"
              type="integer"
    >
      <column name="depth"
              sql-type="int"
              not-null="true"
              unique-key="members_idx"
      />
    </property>
    <!-- depth -->

    <!-- parentUuid -->
    <!-- [@since 1.2.0] Refers to parent's UUID, not ID -->
    <property name="parentUuid"
              type="string"
              update="false"
    >
      <column name="parent_membership"
              index="membership_parent_idx"
              length="128"
              not-null="false"
      />
    </property>
    <!-- parentUuid -->

    <!-- creatorUuid -->
    <!-- [@since 1.2.0] Refers to member's UUID, not ID -->
    <property name="creatorUuid"
              type="string"
              update="true"
    >
      <column name="creator_id"
              index="membership_creator_idx"
              length="128"
              not-null="false"
      />
    </property>
    <!-- creatorUuid -->

    <!-- createTime -->
    <property name="createTimeLong"
              type="long"
              update="false"
    >
      <column name="create_time"
              index="membership_createtime_idx"
              not-null="true"
      />
    </property>
    <!-- createTime -->

    <!-- context id of the transaction -->
    <property name="contextId" column="context_id" />

  </class>
</hibernate-mapping>

