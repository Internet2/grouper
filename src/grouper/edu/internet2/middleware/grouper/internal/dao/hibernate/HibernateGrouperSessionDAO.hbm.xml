<!-- $Id: HibernateGrouperSessionDAO.hbm.xml,v 1.3 2007-05-14 16:12:56 blair Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper.internal.dao.hibernate">
  <class name="HibernateGrouperSessionDAO" table="grouper_sessions">

    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">HibernateDAO.getSession();</meta>

    <cache usage="read-write"/>

    <!-- id -->
    <id name="id" 
        type="string"
        unsaved-value="null"
        length="128"
    >
      <meta attribute="use-in-tostring">false</meta>
      <generator class="uuid.hex"/>
    </id>
    <!-- id -->

    <!-- memberUuid -->
    <!-- [@since 1.2.0] Refers to member's UUID, not ID -->
    <property name="memberUuid"
              type="string"
              not-null="true"
              unique="false"
              update="false"
    >
      <column name="member_id"
              not-null="true"
              length="128"
      />
    </property>
    <!-- memberUuid -->

    <!-- startTime -->
    <!-- TODO 20070430 rename column to "start_time" -->
    <property name="startTime"
              type="long"
              not-null="true"
              update="false"
    />
    <!-- startTime -->

    <!-- uuid -->
    <property name="uuid"
              type="string"
              not-null="true"
              unique="true"
    >
      <column name="session_uuid"
              length="128"
      />
    </property>
    <!-- uuid -->

  </class>
</hibernate-mapping>

