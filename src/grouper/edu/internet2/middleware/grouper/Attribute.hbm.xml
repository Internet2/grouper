<!-- $Id: Attribute.hbm.xml,v 1.2 2005-11-11 18:32:06 blair Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper">
  <class name="Attribute" table="grouper_attributes">

    <meta attribute="class-description">
A group attribute within the Groups registry.
@author blair christensen.
    </meta>
    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">HibernateHelper.getSession();</meta>

    <!-- id -->
    <id name="id" type="string">
      <meta attribute="use-in-tostring">false</meta>
      <column name="id" sql-type="char(32)"/>
      <generator class="uuid.hex"/>
    </id>
    <!-- id -->
    <!-- version -->
    <version name="version"/>
    <!-- version -->


    <!-- group_id -->
    <many-to-one
      name="group_id"
      class="edu.internet2.middleware.grouper.Group" 
    >
      <meta attribute="field-description">
Get group.
      </meta>
      <meta attribute="finder-method">findByGroupId</meta>
      <meta attribute="use-in-equals">true</meta>
      <meta attribute="use-in-tostring">true</meta>
      <column name="group_id" sql-type="char(64)"/>
    </many-to-one>
    <!-- group_id -->

    <!-- field_id -->
    <many-to-one
      name="field_id"
      class="edu.internet2.middleware.grouper.Field" 
    >
      <meta attribute="field-description">
Get field.
      </meta>
      <meta attribute="finder-method">findByFieldId</meta>
      <meta attribute="use-in-equals">true</meta>
      <meta attribute="use-in-tostring">true</meta>
      <column name="field_id" sql-type="char(64)"/>
    </many-to-one>
    <!-- field_id -->

    <!-- value -->
    <property 
      name="value"
      type="string"
      length="1024"
      not-null="true"
    >
      <meta attribute="field-description">
Get attribute value.
      </meta>
      <meta attribute="finder-method">findByValue</meta>
      <meta attribute="use-in-equals">true</meta>
      <meta attribute="use-in-tostring">true</meta>
    </property>
    <!-- value -->

  </class>
</hibernate-mapping>

