<!-- $Id: Owner.hbm.xml,v 1.7 2006-03-24 19:38:12 blair Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper">
  <class name="Owner" table="grouper_owners">

    <meta attribute="class-description">
An owner within the Groups Registry.
@author blair christensen.
    </meta>
    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">HibernateHelper.getSession();</meta>

    <cache usage="read-write"/>

    <!-- id -->
    <id name="id" 
        type="string" 
        unsaved-value="null"
        length="128"
    >
      <generator class="uuid.hex"/>
    </id>
    <!-- id -->

    <!-- creator_id -->
    <many-to-one  name="creator_id"
                  class="edu.internet2.middleware.grouper.Member" 
                  not-null="true"
                  index="owner_creator_idx"
    />
    <!-- creator_id -->

    <!-- create_source -->
    <property 
      name="create_source"
      type="string"
    />
    <!-- create_source -->

    <!-- create_time -->
    <property name="create_time"
              type="long"
              not-null="true"
              update="false"
              index="owner_createtime_idx" 
    >
      <column name="create_time"
              not-null="true"
      />
    </property>
    <!-- create_time -->

    <!-- modifier_id -->
    <many-to-one  name="modifier_id"
                  class="edu.internet2.middleware.grouper.Member" 
                  cascade="none"
                  index="owner_modifier_idx"
    />
    <!-- modifier_id -->

    <!-- modify_source -->
    <property 
      name="modify_source"
      type="string"
    />
    <!-- modify_source -->

    <!-- modify_time -->
    <property name="modify_time"
              type="long"
              index="owner_modifytime_idx" 
    />
    <!-- modify_time -->

    <!-- owner_uuid -->
    <property name="owner_uuid"
              type="string"
              not-null="true"
              unique="true"
              index="owner_uuid_idx"
    >
      <column name="owner_uuid"
              length="128"
      />
    </property>
    <!-- owner_uuid -->

    <!-- status -->
    <property name="status"
              type="edu.internet2.middleware.grouper.StatusUserType"
              update="false"
              index="owner_status_idx"
    >
      <column name="status_type"
              length="128"
      />
      <column name="status_ttl"/>
    </property>
    <!-- status -->


    <joined-subclass  name="Factor" table="grouper_factors">
      <key column="owner_id"/>

      <!-- factor_owner -->
      <many-to-one  name="factor_owner"
                    class="edu.internet2.middleware.grouper.Owner"
                    cascade="none"
      />
      <!-- factor_owner -->

      <!-- left -->
      <many-to-one  name="left"
                    class="edu.internet2.middleware.grouper.Owner"
                    cascade="none"
      />
      <!-- left -->

      <!-- right -->
      <many-to-one  name="right"
                    class="edu.internet2.middleware.grouper.Owner"
                    cascade="none"
      />
      <!-- right -->

      <!-- klass -->
      <property name="klass"
                type="string"
      />
      <!-- klass -->

    </joined-subclass>

    <joined-subclass  name="Group" table="grouper_groups">
      <key column="owner_id"/>

      <!-- attributes -->
      <!-- TODO Would switching to _all-delete-orphan_ work -->
      <set  name="group_attributes"
            cascade="all"
      >
        <key column="group_id"/>
        <one-to-many class="edu.internet2.middleware.grouper.Attribute" />
      </set>
      <!-- attributes -->

      <!-- parent_stem -->
      <many-to-one
        name="parent_stem"
        class="edu.internet2.middleware.grouper.Stem"
        cascade="none"
      />
      <!-- parent_stem -->

      <!-- group_types -->
      <set  
        name="group_types"
        table="grouper_groups_types"
        cascade="none"
      >
        <key column="group_id"/>
        <many-to-many 
          class="edu.internet2.middleware.grouper.GroupType"
          column="type_id"
        />
      </set>
      <!-- group_types -->

    </joined-subclass>

    <joined-subclass  name="Stem" table="grouper_stems">
      <key column="owner_id"/>

      <!-- child_groups -->
      <set  
        name="child_groups"
        table="grouper_groups"
        cascade="none"
        inverse="true"
        lazy="true"
        batch-size="10"
      >
        <key column="parent_stem"/>
        <one-to-many class="edu.internet2.middleware.grouper.Group" />
      </set>
      <!-- child_stems -->

      <!-- child_stems -->
      <set  
        name="child_stems"
        table="grouper_stems"
        cascade="none"
        inverse="true"
        lazy="true"
        batch-size="10"
      >
        <key column="parent_stem"/>
        <one-to-many class="edu.internet2.middleware.grouper.Stem" />
      </set>
      <!-- child_stems -->

      <!-- description -->
      <property 
        name="stem_description"
        type="string"
        length="1024"
      >
        <column name="description"/>
      </property>
      <!-- description -->

      <!-- display_extension -->
      <property name="display_extension"
                type="string"
                index="stem_displayextn_idx"
                not-null="true"
      />
      <!-- display_extension -->

      <!-- display_name -->
      <property name="display_name"
                type="string"
                index="stem_displayname_idx"
                not-null="true"
      />
      <!-- display_name -->

      <!-- extension -->
      <property name="stem_extension"
                type="string"
                index="stem_extn_idx"
      >
        <column name="extension"
                not-null="true"
        />
      </property>
      <!-- extension -->

      <!-- name -->
      <property
        name="stem_name"
        type="string"
        index="stem_name_idx"
      >
        <column name="name"
                not-null="true"/>
      </property>
      <!-- name -->

      <!-- parent_stem -->
      <many-to-one
        name="parent_stem"
        class="edu.internet2.middleware.grouper.Stem"
        cascade="none"
      />
      <!-- parent_stem -->
    </joined-subclass>

  </class>
</hibernate-mapping>

