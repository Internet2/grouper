<!-- $Id: Stem.hbm.xml,v 1.18 2006-03-01 19:52:58 blair Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper">
  <class name="Stem" table="grouper_stems">

    <meta attribute="class-description">
A namespace within the Groups Registry.
@author blair christensen.
    </meta>
    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">HibernateHelper.getSession();</meta>

    <cache usage="read-write"/>

    <!-- id -->
    <id name="id" 
        type="string" 
        unsaved-value="null"
        length="128"
    >
      <generator class="uuid.hex"/>
    </id>
    <!-- id -->

    <!-- child_groups -->
    <set  name="child_groups"
          table="grouper_groups"
          cascade="none"
          inverse="true"
          lazy="true"
          batch-size="10"
    >
      <key column="parent_stem"/>
      <one-to-many class="edu.internet2.middleware.grouper.Group" />
    </set>
    <!-- child_stems -->

    <!-- child_stems -->
    <set  name="child_stems"
          table="grouper_stems"
          cascade="none"
          inverse="true"
          lazy="true"
          batch-size="10"
    >
      <key column="parent_stem"/>
      <one-to-many class="edu.internet2.middleware.grouper.Stem" />
    </set>
    <!-- child_stems -->

    <!-- creator_id -->
    <many-to-one  name="creator_id"
                  class="edu.internet2.middleware.grouper.Member" 
                  not-null="true"
                  index="stem_creator_idx"
    />
    <!-- creator_id -->

    <!-- create_source -->
    <property 
      name="create_source"
      type="string"
    />
    <!-- create_source -->

    <!-- create_time -->
    <property name="create_time"
              type="long"
              not-null="true"
              update="false"
              index="stem_createtime_idx" 
    >
      <column name="create_time"
              not-null="true"
      />
    </property>
    <!-- create_time -->

    <!-- description -->
    <property 
      name="stem_description"
      type="string"
      length="1024"
    >
      <column name="description"/>
    </property>
    <!-- description -->

    <!-- display_extension -->
    <property name="display_extension"
              type="string"
              index="stem_displayextn_idx"
              not-null="true"
    />
    <!-- display_extension -->

    <!-- display_name -->
    <property name="display_name"
              type="string"
              index="stem_displayname_idx"
              not-null="true"
    />
    <!-- display_name -->

    <!-- extension -->
    <property name="stem_extension"
              type="string"
              index="stem_extn_idx"
    >
      <column name="extension"
              not-null="true"
      />
    </property>
    <!-- extension -->

    <!-- modifier_id -->
    <many-to-one  name="modifier_id"
                  class="edu.internet2.middleware.grouper.Member" 
                  cascade="none"
                  index="stem_modifier_idx"
    />
    <!-- modifier_id -->

    <!-- modify_source -->
    <property 
      name="modify_source"
      type="string"
    />
    <!-- modify_source -->

    <!-- modify_time -->
    <property name="modify_time"
              type="long"
              index="stem_modifytime_idx" 
    />
    <!-- modify_time -->

    <!-- name -->
    <property
      name="stem_name"
      type="string"
      index="stem_name_idx"
    >
      <column name="name"
              not-null="true"/>
    </property>
    <!-- name -->

    <!-- parent_stem -->
    <many-to-one
      name="parent_stem"
      class="edu.internet2.middleware.grouper.Stem"
      cascade="none"
    />
    <!-- parent_stem -->

    <!-- stem_id -->
    <property name="stem_id"
              type="string"
              not-null="true"
              unique="true"
              index="stem_uuid_idx"
    >
      <column name="stem_uuid"
              length="128"
      />
    </property>
    <!-- stem_id -->

    <!-- status -->
    <property name="status"
              type="edu.internet2.middleware.grouper.StatusUserType"
              update="false"
              index="stem_status_idx"
    >
      <column name="status_type"
              length="128"
      />
      <column name="status_ttl"/>
    </property>
    <!-- status -->

  </class>
</hibernate-mapping>

