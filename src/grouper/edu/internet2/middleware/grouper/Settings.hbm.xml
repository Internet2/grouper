<!-- $Id: Settings.hbm.xml,v 1.2 2006-05-23 19:10:23 blair Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper">
  <class name="Settings" table="grouper_settings">

    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">HibernateHelper.getSession();</meta>

    <cache usage="read-write"/>

    <!-- id -->
    <id name="id" 
        type="string" 
        unsaved-value="null"
        length="128"
    >
      <generator class="uuid.hex"/>
    </id>
    <!-- id -->

    <!-- schema_version -->
    <property name="schemaVersion"
              type="integer"
    >
      <column name="schema_version"
              not-null="true"
      />
    </property>
    <!-- schema_version -->

    <!-- 
      TODO Add <map .../> to other properties? 
           Perhaps even load in settings from runtime configs as well?
      -->
  </class>
</hibernate-mapping>

