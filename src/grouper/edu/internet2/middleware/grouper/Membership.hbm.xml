<!-- $Id: Membership.hbm.xml,v 1.32 2007-01-11 18:05:45 blair Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper">
  <class name="Membership" table="grouper_memberships" batch-size="5">

    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">HibernateDAO.getSession();</meta>

    <cache usage="read-write"/>

    <!-- id -->
    <id name="id" 
        type="string"
        unsaved-value="null"
        length="128"
    >
      <generator class="uuid.hex"/>
    </id>
    <!-- id -->

    <!-- owner_id -->
    <!-- [@since 1.2.0] Refers to owner's UUID, not ID -->
    <property name="owner_id"
              type="string"
              not-null="true"
              unique="false"
              update="false"
    >
      <column name="owner_id"
              not-null="true"
              length="128"
              unique-key="members_idx"
              index="membership_owner_idx"
      />
    </property>
    <!-- owner_id -->

    <!-- member_id -->
    <many-to-one
      name="member_id"
      class="edu.internet2.middleware.grouper.Member" 
      cascade="none"
    >
      <column name="member_id" 
              unique-key="members_idx"
              not-null="true"
              index="membership_member_idx"
      />
    </many-to-one>
    <!-- member_id -->

    <!-- field -->
    <property name="field"
              type="edu.internet2.middleware.grouper.FieldUserType"
              update="false"
    >
      <column name="list_name"
              not-null="true"
              unique-key="members_idx"
              length="32"
              index="membership_field_idx"
      />
      <column name="list_type"
              not-null="true"
              unique-key="members_idx"
              length="32"
              index="membership_field_idx"
      />
    </property>
    <!-- field -->

    <!-- mship_type -->
    <property 
      name="mship_type"
      type="string"
      not-null="true"
      update="false"
    >
      <column name="mship_type"
              not-null="true"
              length="32"
              index="membership_type_idx"
      />
    </property>
    <!-- mship_type -->

    <!-- via_id -->
    <!-- [@since 1.2.0] Refers to parent's UUID, not ID -->
    <property name="via_id"
              type="string"
              not-null="false"
              unique="false"
              update="false"
    >
      <column name="via_id"
              index="membership_via_idx"
              length="128"
      />
    </property>
    <!-- via_id -->

    <!-- depth -->
    <property name="depth"
              type="integer"
              not-null="true"
    >
      <column name="depth"
              sql-type="int"
              unique-key="members_idx"
              index="membership_depth_idx"
      />
    </property>
    <!-- depth -->

    <!-- parent_membership -->
    <!-- [@since 1.2.0] Refers to parent's UUID, not ID -->
    <property name="parent_membership"
              type="string"
              not-null="false"
              unique="false"
              update="false"
    >
      <column name="parent_membership"
              index="membership_parent_idx"
              length="128"
      />
    </property>
    <!-- parent_membership -->

    <!-- uuid -->
    <property 
      name="uuid"
      type="string"
      not-null="true"
      unique="true"
      update="true"
    >
      <column name="membership_uuid"
              unique-key="members_idx"
              length="128"
      />
    </property>
    <!-- uuid -->

    <!-- creator_id -->
    <!-- [@since 1.2.0] Refers to member's UUID, not ID -->
    <property name="creator_id"
              type="string"
              not-null="false"
              unique="false"
              update="false"
    >
      <column name="creator_id"
              index="membership_creator_idx"
              length="128"
      />
    </property>
    <!-- creator_id -->

    <!-- create_time -->
    <property name="create_time"
              type="long"
              not-null="true"
              update="false"
    >
      <column name="create_time"
              index="membership_createtime_idx"
      />
    </property>
    <!-- create_time -->

  </class>
</hibernate-mapping>

