<!-- $Id: Membership.hbm.xml,v 1.18 2006-03-16 20:59:57 blair Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper">
  <class name="Membership" table="grouper_memberships">

    <meta attribute="class-description">
A list membership in the Groups Registry.
@author blair christensen.
    </meta>
    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">HibernateHelper.getSession();</meta>

    <cache usage="read-write"/>

    <!-- id -->
    <id name="id" 
        type="string"
        unsaved-value="null"
        length="128"
    >
      <generator class="uuid.hex"/>
    </id>
    <!-- id -->

    <!-- uuid -->
    <property 
      name="uuid"
      type="string"
    >
      <column name="membership_uuid"
              not-null="true"
              unique-key="members_idx"
              length="128"
      />
    </property>
    <!-- group_id -->


    <!-- owner_id -->
    <many-to-one
      name="owner_id"
      class="edu.internet2.middleware.grouper.Owner" 
      cascade="none"
      index="membership_owner_idx"
    >
      <column 
        name="owner_id"
        unique-key="members_idx"
      />
    </many-to-one>
    <!-- owner_id -->

    <!-- member_id -->
    <many-to-one
      name="member_id"
      class="edu.internet2.middleware.grouper.Member" 
      cascade="none"
      index="membership_member_idx"
    >
      <column name="member_id" 
              unique-key="members_idx"
              not-null="true"
      />
    </many-to-one>
    <!-- member_id -->

    <!-- field -->
    <property name="field"
              type="edu.internet2.middleware.grouper.FieldUserType"
              update="false"
              index="membership_field_idx"
    >
      <column name="list_name"
              not-null="true"
              unique-key="members_idx"
              length="32"
      />
      <column name="list_type"
              not-null="true"
              unique-key="members_idx"
              length="32"
      />
    </property>
    <!-- field -->

    <!-- via_id -->
    <many-to-one
      name="via_id"
      class="edu.internet2.middleware.grouper.Owner" 
      cascade="none"
      index="membership_via_idx"
    >
      <column 
        name="via_id"
        unique-key="members_idx"
      />
    </many-to-one>
    <!-- via_id -->

    <!-- depth -->
    <property name="depth"
              type="integer"
              not-null="true"
              index="membership_depth_idx"
    >
      <column name="depth"
              sql-type="int"
              unique-key="members_idx"
      />
    </property>
    <!-- depth -->

    <!-- parent_membership -->
    <!-- TODO Don't allow updates? -->
    <many-to-one
      name="parent_membership"
      class="edu.internet2.middleware.grouper.Membership"
      cascade="none"
      index="membership_parent_idx"
    >
      <column name="parent_membership"/>
    </many-to-one>
    <!-- parent_membership -->

    <!-- creator_id -->
    <many-to-one  name="creator_id"
                  class="edu.internet2.middleware.grouper.Member" 
                  index="membership_creator_idx" 
    />
    <!-- creator_id -->

    <!-- create_time -->
    <property name="create_time"
              type="long"
              not-null="true"
              update="false"
              index="membership_createtime_idx"
    />
    <!-- create_time -->

    <!-- status -->
    <property name="status"
              type="edu.internet2.middleware.grouper.StatusUserType"
              update="false"
              index="membership_status_idx"
    >
      <column name="status_type"
              length="128"
      />
      <column name="status_ttl"/>
    </property>
    <!-- status -->

  </class>
</hibernate-mapping>

