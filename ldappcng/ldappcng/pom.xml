                <edu.vt.middleware.ldap.pagedResultsSize>0</edu.vt.middleware.ldap.pagedResultsSize>
                <edu.vt.middleware.ldap.searchResultHandlers>edu.internet2.middleware.ldappc.util.QuotedDnResultHandler,edu.vt.middleware.ldap.handler.FqdnSearchResultHandler</edu.vt.middleware.ldap.searchResultHandlers>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <excludes>
                                <exclude>**/ad/*</exclude>
                                <exclude>**/CRUDRangeTest.java</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>RedHat</id>
            <properties>
                <testUseEmbeddedLdap>false</testUseEmbeddedLdap>
                <testUseActiveDirectory>false</testUseActiveDirectory>
                <base>dc=testgrouper,dc=edu</base>
                <groupObjectClass>groupOfNames</groupObjectClass>
                <edu.vt.middleware.ldap.base>dc=testgrouper,dc=edu</edu.vt.middleware.ldap.base>
                <edu.vt.middleware.ldap.authtype>simple</edu.vt.middleware.ldap.authtype>
                <!-- <edu.vt.middleware.ldap.ldapUrl>ldap://127.0.0.1:389</edu.vt.middleware.ldap.ldapUrl> -->
                <!-- <edu.vt.middleware.ldap.serviceUser>uid=admin,ou=system</edu.vt.middleware.ldap.serviceUser> -->
                <!-- <edu.vt.middleware.ldap.serviceCredential></edu.vt.middleware.ldap.serviceCredential> -->
                <edu.vt.middleware.ldap.ssl>true</edu.vt.middleware.ldap.ssl>
                <edu.vt.middleware.ldap.tls>false</edu.vt.middleware.ldap.tls>
                <!-- for ldappc -->
                <edu.vt.middleware.ldap.pagedResultsSize>0</edu.vt.middleware.ldap.pagedResultsSize>
                <edu.vt.middleware.ldap.searchResultHandlers>edu.internet2.middleware.ldappc.util.QuotedDnResultHandler,edu.vt.middleware.ldap.handler.FqdnSearchResultHandler</edu.vt.middleware.ldap.searchResultHandlers>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
