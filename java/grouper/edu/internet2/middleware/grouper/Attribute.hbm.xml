<!-- $Id: Attribute.hbm.xml,v 1.6 2005-12-12 16:07:24 blair Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper">
  <class name="Attribute" table="grouper_attributes">

    <meta attribute="class-description">
A group attribute within the Groups registry.
@author blair christensen.
    </meta>
    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">HibernateHelper.getSession();</meta>

    <cache usage="read-write"/>

    <!-- id -->
    <id name="id" 
        type="string"
        unsaved-value="null"
    >
      <meta attribute="use-in-tostring">false</meta>
      <generator class="uuid.hex"/>
    </id>
    <!-- id -->
    <version name="version" column="version"/>


    <!-- group_id -->
    <many-to-one
      name="group"
      class="edu.internet2.middleware.grouper.Group" 
      not-null="true"
    >
      <column name="group_id"
              unique-key="group_field_idx"
      />
    </many-to-one>
    <!-- group_id -->

    <!-- field -->
    <property name="field"
              type="edu.internet2.middleware.grouper.FieldUserType"
              update="false"
              index="attribute_field_idx"
    > 
      <column name="field_name"
              not-null="true"
              unique-key="group_field_idx"
      />
      <column name="field_type"
              not-null="true"
              unique-key="group_field_idx"
      />
    </property>
    <!-- field -->

    <!-- value -->
    <property 
      name="value"
      type="string"
      length="1024"
      not-null="true"
      index="attribute_value_idx"
    >
    </property>
    <!-- value -->

  </class>
</hibernate-mapping>

