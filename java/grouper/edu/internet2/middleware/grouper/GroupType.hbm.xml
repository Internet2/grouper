<!-- $Id: GroupType.hbm.xml,v 1.2 2005-11-11 18:32:07 blair Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper">
  <class name="GroupType" table="grouper_types">

    <meta attribute="class-description">
Schema specification for a Group type.
@author blair christensen.
    </meta>
    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">HibernateHelper.getSession();</meta>

    <!-- id -->
    <id name="id" type="string">
      <meta attribute="use-in-tostring">false</meta>
      <column name="id" sql-type="char(32)"/>
      <generator class="uuid.hex"/>
    </id>
    <!-- id -->
    <!-- version -->
    <version name="version"/>
    <!-- version -->


    <!-- name -->
    <property
      name="name"
      type="string"
      length="255"
      not-null="true"
    >
      <meta attribute="field-description">
Get type name.
      </meta>
      <meta attribute="finder-method">findByName</meta>
      <meta attribute="use-in-equals">true</meta>
      <meta attribute="use-in-tostring">true</meta>
    </property>
    <!-- type_id -->

    <!-- fields -->
<!-- TODO Resolve this later
    <set name="fields">
      <meta attribute="field-description">
Get fields.
      </meta>
      <meta attribute="use-in-equals">true</meta> 
      <meta attribute="use-in-tostring">true</meta> 
      <key  column="id"/>
      <one-to-many class="edu.internet2.middleware.grouper.Field"/>
    </set>
-->
    <!-- fields -->

  </class>
</hibernate-mapping>

