<!-- $Id: Stem.hbm.xml,v 1.6 2005-12-09 07:35:38 blair Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper">
  <class name="Stem" table="grouper_stems">

    <meta attribute="class-description">
A namespace within the Groups Registry.
@author blair christensen.
    </meta>
    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">HibernateHelper.getSession();</meta>

    <!-- id -->
    <id name="id" 
        type="string" 
        unsaved-value="null"
    >
      <generator class="uuid.hex"/>
    </id>
    <!-- id -->
    <version name="version" column="version"/>


    <!-- child_groups -->
    <!-- TODO cascade -->
    <set  name="child_groups"
          table="grouper_groups"
          cascade="none"
          inverse="true"
    >
      <key column="parent_stem"/>
      <one-to-many class="edu.internet2.middleware.grouper.Group" />
    </set>
    <!-- child_stems -->

    <!-- child_stems -->
    <set  name="child_stems"
          table="grouper_stems"
          cascade="save-update"
          inverse="true"
    >
      <key column="parent_stem"/>
      <one-to-many class="edu.internet2.middleware.grouper.Stem" />
    </set>
    <!-- child_stems -->

    <!-- creator_id -->
    <many-to-one
      name="creator_id"
      class="edu.internet2.middleware.grouper.Member" 
      not-null="true"
    />
    <!-- creator_id -->

    <!-- create_source -->
    <property 
      name="create_source"
      type="string"
      length="255"
    />
    <!-- create_source -->

    <!-- create_time -->
    <property 
      name="create_time"
      type="long"
      not-null="true"
      update="false"
    >
      <column name="create_time"
              not-null="true"
      />
    </property>
    <!-- create_time -->

    <!-- description -->
    <property 
      name="stem_description"
      type="string"
      length="1024"
    >
      <meta attribute="field-description">
Get description.
      </meta>
    </property>
    <!-- description -->

    <!-- display_extension -->
    <property
      name="display_extension"
      type="string"
      length="255"
    >
      <column name="display_extension"
              not-null="true"
      />
    </property>
    <!-- display_extension -->

    <!-- display_name -->
    <property
      name="display_name"
      type="string"
      length="255"
    >
      <column name="display_name"
              not-null="true"
              unique="true"
      />
    </property>
    <!-- display_name -->

    <!-- extension -->
    <property
      name="stem_extension"
      type="string"
      length="255"
    >
      <column name="stem_extension"
              not-null="true"
      />
    </property>
    <!-- extension -->

    <!-- modifier_id -->
    <many-to-one
      name="modifier_id"
      class="edu.internet2.middleware.grouper.Member" 
      cascade="none"
    />
    <!-- modifier_id -->

    <!-- modify_source -->
    <property 
      name="modify_source"
      type="string"
      length="255"
    />
    <!-- modify_source -->

    <!-- modify_time -->
    <property 
      name="modify_time"
      type="long"
    />
    <!-- modify_time -->

    <!-- name -->
    <property
      name="stem_name"
      type="string"
      length="255"
    >
      <column name="stem_name"
              not-null="true"
              unique="true"
      />
    </property>
    <!-- name -->

    <!-- parent_stem -->
    <many-to-one
      name="parent_stem"
      class="edu.internet2.middleware.grouper.Stem"
      cascade="none"
    >
      <column name="parent_stem"/>
    </many-to-one>
    <!-- parent_stem -->

    <!-- stem_id -->
    <property 
      name="stem_id"
      type="string"
      not-null="true"
      unique="true"
    />
    <!-- stem_id -->

  </class>
</hibernate-mapping>

