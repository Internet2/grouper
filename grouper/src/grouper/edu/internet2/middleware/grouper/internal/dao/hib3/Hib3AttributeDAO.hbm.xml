<!-- $Id: Hib3AttributeDAO.hbm.xml,v 1.11 2009-03-24 17:12:08 mchyzer Exp $ -->

<hibernate-mapping package="edu.internet2.middleware.grouper" default-lazy="false">

  <!-- note: optimistic-lock defaults to version, but will be dynamically replaced
    based on the grouper.properties, so dont remove that attribute  -->
  <class name="Attribute" table="grouper_attributes" optimistic-lock="version">

    <meta attribute="implement-equals">true</meta>
    <meta attribute="session-method">Hib3DAO.getSession();</meta>

    <cache usage="read-write"/>

    <!-- id -->
    <id name="id" 
        type="string"
        unsaved-value="null"
    >
      <generator class="assigned"/>
    </id>
    <!-- id -->

    <!-- version helps hibernate know when insert/update, and makes sure optimistic locking -->
    <version name="hibernateVersionNumber" column="hibernate_version_number" type="long"/>

<!--
  I had a unique index across `group_id`, `field_name` and `field_type` but
  Oracle did **not** like it one bit.
-->

    <!-- groupUuid -->
    <!-- [@since 1.2.0] Refers to group's UUID, not ID -->
    <property name="groupUuid"
              type="string"
              unique="false"
              not-null="true"
    >
      <column name="group_id"
              length="128"
              index="attribute_group_idx"
              unique-key="attribute_uniq_idx"
      />
    </property>
    <!-- groupUuid -->

    <!-- fieldId -->
    <property name="fieldId" length="128"
          column="field_id" type="string" />
    <!-- fieldId -->

    <!-- value -->
    <property 
      name="value"
      type="string"
      length="1024"
    >
      <column name="value"
              not-null="true"
              index="attribute_value_idx, attribute_field_value_idx"
              length="1024"
      />
    </property>
    <!-- value -->

    <property name="contextId" column="context_id"/>

  </class>
</hibernate-mapping>

