<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class
		name="edu.internet2.middleware.signet.ChoiceImpl"
		table="signet_choice">
		
		<id name="key" type="int" column="choiceKey">
			<generator class="native"/>
		</id>
		
		<timestamp name="modifyDatetime"/>
		
		<many-to-one 
			name="choiceSet"
			column="choiceSetKey"
			class="edu.internet2.middleware.signet.ChoiceSetImpl"
			not-null="true"/>
	
		<property
			name="value" column="value" type="string" not-null="true"/>
		<property
			name="displayValue" column="label" type="string" not-null="true"/>
		<property
			name="rank" type="integer" not-null="true"/>
		<property
			name="displayOrder" type="integer" not-null="true"/>
	</class>
</hibernate-mapping>
